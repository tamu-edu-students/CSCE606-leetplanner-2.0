<div class="notes-page page">
  <div class="page-header">
    <h2 class="page-title">Lobby Notes</h2>
    <p class="page-subtitle">For: <%= @lobby.name %></p>
  </div>

  <div class="content-area">
    <%= form_with url: lobby_note_path(@lobby), model: @note, local: true, class: "notes-form" do |form| %>

      <% if current_user == @lobby.owner || current_user.lobby_members.find_by(lobby: @lobby)&.can_edit_notes? %>
        <div class="notes-form__editor-group">
          <%= form.text_area :content,
                             rows: 15,
                             class: "notes-form__textarea form-control",
                             placeholder: "Write notes here..." %>
        </div>
      <% else %>
        <div class="notes-form__readonly-content">
          <%= @note&.content.presence || "No notes yet." %>
        </div>
      <% end %>

      <div class="notes-form__actions">
        <% if current_user == @lobby.owner || current_user.lobby_members.find_by(lobby: @lobby)&.can_edit_notes? %>
          <% button_text = @note.persisted? ? "Save Note" : "Create Note" %>
          <%= form.submit button_text, class: "btn btn-primary" %>
        <% end %>

        <%= link_to "Back to Lobby", lobby_path(@lobby), class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>
</div>
