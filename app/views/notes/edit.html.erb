<div class="container mx-auto px-4">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Edit Note</h1>
      <%= link_to "Back to Lobby", @lobby, class: "btn btn-secondary" %>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <%= form_with model: [@lobby, @note], local: true do |form| %>
        <% if @note.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <h4 class="text-red-800 font-medium">Please fix the following errors:</h4>
            <ul class="mt-2 text-red-700">
              <% @note.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-6">
          <%= form.label :content, "Note Content", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :content, 
                class: "w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500", 
                rows: 15,
                placeholder: "Enter your note content here..." %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", @lobby, class: "btn btn-secondary" %>
          <%= form.submit "Save Note", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>