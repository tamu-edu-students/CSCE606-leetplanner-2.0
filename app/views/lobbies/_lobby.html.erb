<div class="app-container">
    <%= render 'shared/navbar' %>

    <main class="main-content">
        <div id="lobbiesPage" class="page">
            <div class="page-header align">
                <div>
                    <h1 class="page-title"><%= lobby.name.presence || 'UNNAMED LOBBY' %></h1>
                    <p class="page-subtitle"> Host: <%= lobby.owner.full_name %> </p>
                </div>
            </div>
            <div class="content-area">
                <h3 class="page-title">Description</h3>
                <div class="lobby-description"><%= lobby.description %></div>
                <br/>

                <% if current_user.id == lobby.owner_id %>
                    <div class="lobby-code-display">
                        <strong>Lobby Code:</strong> <span><%= lobby.lobby_code %></span>
                    </div>
                    <br/>
                <% end %>

                <h3 class="page-title">Participants (<%= lobby.lobby_members.length %>)</h3>
                <% if lobby.lobby_members.any? %>
                    <ul class="lobby-members">
                        <% lobby.lobby_members.each do |member| %>
                            <li> <%= member.user.full_name %></li>
                        <% end %>
                    </ul>
                <% end %>

                <% if current_user.id == lobby.owner_id && lobby.lobby_members.length > 1 %>
                    <hr>
                    <h3 class="page-title">Manage Permissions</h3>
                    <table class="permissions-table">
                        <thead>
                            <tr>
                                <th>Participant</th>
                                <th>Can Draw</th>
                                <th>Can Edit Notes</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% lobby.lobby_members.each do |member| %>
                                <% next if member.user == lobby.owner %>
                                <tr>
                                    <%= form_with(model: member, url: permissions_lobby_member_path(member), method: :patch) do |form| %>
                                        <td><%= member.user.full_name %></td>
                                        <td><%= form.check_box :can_draw %></td>
                                        <td><%= form.check_box :can_edit_notes %></td>
                                        <td><%= form.submit "Save", class: "btn btn-primary btn-small" %></td>
                                    <% end %>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                <% end %>
                <hr>

                <div class="lobby-actions">
                  <% if current_user == @lobby.owner %>
                    <%# If the user is the owner, show the "Destroy" button %>
                    <%= button_to "Destroy this lobby", @lobby, 
                                  method: :delete, 
                                  class: "btn btn-danger", 
                                  data: { confirm: 'Are you sure?' } %>
                  <% else %>
                    <%# Otherwise, show the "Leave" button %>
                    <%= button_to "Leave this lobby", leave_lobby_path(@lobby), 
                                  method: :delete, 
                                  class: "btn btn-warning" %>
                  <% end %>
                </div>
            </div>
        </main>
</div>