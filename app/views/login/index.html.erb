<div class="login-page">
  <div class="login-container">
    <div class="logo">
      <%= image_tag "logo.svg", alt: "Leet Planner Logo" %>
    </div>
    <h1>Welcome to Leet Planner</h1>
    <p>Your personal productivity companion</p>
    <%= link_to "Sign in with Google", "/login/google", class: "btn btn-primary" %>
    
    <% if Rails.env.development? && ENV['ENABLE_DEV_LOGIN'] == 'true' %>
      <div style="margin-top: 20px; padding: 15px; background: #f8f9fa; border-radius: 5px; border: 1px solid #dee2e6;">
        <p style="margin: 0 0 10px 0; font-size: 14px; color: #6c757d;">Development Mode Only:</p>
        <%= button_to "Development Login", "/login/dev_bypass", method: :post, class: "btn btn-secondary", style: "width: 100%;" %>
      </div>
    <% end %>
  </div>
</div>
